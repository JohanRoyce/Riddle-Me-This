<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<main class="container">
    <div class = "row">
      <div class="col-md-offset-3 col-md-12">
        <h1><%= title %></h1>
        <a href="/riddle-list/add" class="btn btn-success" role="button">
          <i class="fas fa-plus-circle"></i> Add a Riddle
        </a>
        <br>
        <br>
    <table class= "table table-bordered table-striped table-hover">
    <tr class="d-flex">
      <th class= "text-center col-2">Poster</th>
      <th class= "text-center col-2">Date</th>
      <th class= "text-center col-4">Riddle</th>
      <th class= "text-center col-2">Answer</th>
      <th class= "text-center col-1"></th>
      <th class= "text-center col-1"></th>
    </tr>
    <!-- Repeat the template -->
    <% for(let count=0; count < Riddlelist.length; count++){ %>
        <tr class="d-flex">
          <td class= "text-center col-2"><%= Riddlelist[count].poster %></td>
          <td class= "text-center col-2"><%= Riddlelist[count].date %></td>
          <td class= "text-center col-4"><%= Riddlelist[count].question %></td>
          <td class= "text-center col-2"><%= Riddlelist[count].answer %></td>
          <td class= "text-center col-1">
            <a href="/riddle-list/edit/<%= Riddlelist[count]._id %>"
              class="btn btn-primary">
              <i class="fas fa-pencil-alt"></i> Edit </a>
          </td>
          <td class= "text-center col-1">
            <a href="/riddle-list/delete/<%= Riddlelist[count]._id %>"
              class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> Trash </a>
          </td>
        </tr>
    <% } %>
    </table>
    <br>
    <br>
    </div>
</div>
</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>