<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="posterTextField">Poster's Name</label>
                    <input type="text" class="form-control"
                    id="posterTextField"
                    placeholder="Enter your name"
                    name="poster" 
                    value="<%= riddle.poster %>"
                    required>
                </div> 

                <div class="form-group">
                    <label for="dateTextField">Date posted</label>
                    <input type="text" class="form-control"
                    id="dateTextField"
                    placeholder="e.g. Month Day/Year"
                    name="date" 
                    value="<%= riddle.date %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="questionTextField">Riddle</label>
                    <textarea type="text" class="form-control"
                    id="questionTextField"
                    placeholder="Enter your riddle"
                    name="question" required>
                    <%= riddle.question %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="answerTextField">Riddle Solution</label>
                    <textarea type="text" class="form-control"
                    id="answerTextField"
                    placeholder="Enter the solution to the riddle"
                    name="answer" required>
                    <%= riddle.answer %>
                    </textarea>
                </div>
                <br>
                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/riddle-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
            <br>
            <br>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>